{
  "name": "auto",
  "version": "1.0.0",
  "description": "Web automation tool using Playwright",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "auto": "./bin/command.js"
  },
  "scripts": {
    "build": "tsdown 'src/**/*.ts' '!src/**/*.spec.ts' '!src/**/*.test.ts' --out-dir dist",
    "start": "node bin/command.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run src/",
    "test:e2e": "vitest run tests/e2e/",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "automation",
    "playwright",
    "web-scraping"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.4.1",
  "dependencies": {
    "@playwright/test": "^1.53.2",
    "commander": "^14.0.0",
    "playwright": "^1.53.2"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@vitest/coverage-v8": "3.2.4",
    "prettier": "^3.6.2",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
